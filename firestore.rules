rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isOwner(userId); // Users create their own profiles on signup
      
      // Prevent deleting other users
      allow delete: if false; 
    }

    // Main Database (Orders and Designs)
    match /mydb/{document=**} {
      
      // Common rules for both orders and designs based on 'userId' field
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        // Allow reading if creating a new doc (resource is null)
        resource == null
      );

      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      allow update: if isAuthenticated() && 
                    resource.data.userId == request.auth.uid && 
                    request.resource.data.userId == request.auth.uid; // Prevent transfer of ownership

      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}
